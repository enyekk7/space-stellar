{
  "name": "space-stellar",
  "version": "1.0.0",
  "description": "Space Stellar - NFT-based space shooter game on Stellar",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"stellar scaffold watch --build-clients\" \"vite\"",
    "start": "concurrently \"stellar scaffold watch --build-clients\" \"vite\"",
    "build": "tsc -b && stellar scaffold build && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier . --write",
    "deploy:build": "stellar scaffold build",
    "deploy:publish": "stellar registry publish --wasm target/stellar/space_stellar_nft.wasm --wasm-name space-stellar-nft",
    "deploy:instance": "stellar registry deploy --contract-name space-stellar-nft-instance --wasm-name space-stellar-nft",
    "deploy:alias": "stellar registry create-alias space-stellar-nft-instance",
    "deploy:full": "npm run deploy:build && npm run deploy:publish && npm run deploy:instance -- --owner",
    "deploy:testnet": "powershell -ExecutionPolicy Bypass -File scripts/deploy-scaffold.ps1 -Network testnet",
    "deploy:mainnet": "powershell -ExecutionPolicy Bypass -File scripts/deploy-scaffold.ps1 -Network mainnet"
  },
  "dependencies": {
    "@creit.tech/stellar-wallets-kit": "^1.9.5",
    "@stellar/design-system": "^3.1.5",
    "@stellar/stellar-sdk": "^14.2.0",
    "@stellar/stellar-xdr-json": "^23.0.0",
    "@tanstack/react-query": "^5.90.2",
    "lossless-json": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-dom": "^2.0.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-react-x": "^2.0.3",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "prettier": "3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.11",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-wasm": "^3.5.0"
  }
}


